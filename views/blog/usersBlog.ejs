<%- layout('./layouts/boilerplate') %>

<h4 class="mb-3 text-center"><%= contentType %><br><cite><b><%= authorName %></b></cite></h4>

<div class="row">
	<div class="row justify-content-center">
		<% for(let blog of blogs){ %>

			<div class="card mb-3 w-75">
				<div class="row col-12>	
					<a href="/<%= blog.author._id %>/posts" 
						style="text-decoration: none; 
						  color: #000;
						  font-size:13px">
					<div class="card-header"><img src="https://miro.medium.com/fit/c/25/25/1*dmbNkD5D-u45r44go_cf0g.png" alt="">&nbsp <b><%= blog.author.username %></b>  </div>

				</a>
					<div class="card-body">
						<a href="/blog/<%= blog._id %>" style="text-decoration:none;color:black">
							<h4 style="font-weight:bold" class="card-title home-page-title"><%= blog.title %></h4>
							<p class="card-text text-muted"><%= blog.description %></p> </p>
						</a>
						<!-- <a href="blog/<%= blog._id %>" class="btn btn-primary">View</a> -->
					</div>
					<div class="card-footer text-muted">
						<%= moment(blog.createdAt).fromNow() %>
					</div>
				</div>
			</div>
		<% } %>
	</div>
</div>